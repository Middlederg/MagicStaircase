<div class="flex flex-col border-2 rounded border-green-700 gap-4 max-w-xl w-full bg-green-200 overflow-hidden mx-auto">

    <div class="flex justify-between items-center px-2 py-4">
        <div class="flex flex-col mx-4">
            <p class="flex items-center text-green-800 text-lg font-bold uppercase tracking-wide">
                <svg class="w-5 h-5 mr-2" fill="currentColor" stroke="none" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16">
                    <path d="M2.5.5A.5.5 0 0 1 3 0h10a.5.5 0 0 1 .5.5c0 .538-.012 1.05-.034 1.536a3 3 0 1 1-1.133 5.89c-.79 1.865-1.878 2.777-2.833 3.011v2.173l1.425.356c.194.048.377.135.537.255L13.3 15.1a.5.5 0 0 1-.3.9H3a.5.5 0 0 1-.3-.9l1.838-1.379c.16-.12.343-.207.537-.255L6.5 13.11v-2.173c-.955-.234-2.043-1.146-2.833-3.012a3 3 0 1 1-1.132-5.89A33.076 33.076 0 0 1 2.5.5zm.099 2.54a2 2 0 0 0 .72 3.935c-.333-1.05-.588-2.346-.72-3.935zm10.083 3.935a2 2 0 0 0 .72-3.935c-.133 1.59-.388 2.885-.72 3.935zM3.504 1c.007.517.026 1.006.056 1.469.13 2.028.457 3.546.87 4.667C5.294 9.48 6.484 10 7 10a.5.5 0 0 1 .5.5v2.61a1 1 0 0 1-.757.97l-1.426.356a.5.5 0 0 0-.179.085L4.5 15h7l-.638-.479a.501.501 0 0 0-.18-.085l-1.425-.356a1 1 0 0 1-.757-.97V10.5A.5.5 0 0 1 9 10c.516 0 1.706-.52 2.57-2.864.413-1.12.74-2.64.87-4.667.03-.463.049-.952.056-1.469H3.504z" />
                </svg>
                @InnerAchievement.ToString()
            </p>
            @if (!achievementUnlocked)
            {
                <p class="mt-1 text-xs text-green-500">
                    <span class="font-italic">@achievementUnlockedText</span> @InnerAchievement.Description()
                </p>
            }
            else
            {
                <div class="mt-1 flex flex-col items-start">
                    <span class="font-bold tracking-wider text-sm font-mono">
                        @achievementUnlockedText
                    </span>
                    <span class="text-xs">
                        @InnerAchievement.UnlockingStrategiesText
                    </span>
                </div>
            }

        </div>

        <span class="flex flex-col text-xs">
            @if (UnlockerScores != null)
            {
                foreach (var score in UnlockerScores)
                {
                    <span>@score</span>
                }
            }
        </span>
    </div>
</div>

@code {

    [Parameter]
    public Core.Achievement InnerAchievement { get; set; }

    [Parameter]
    public IEnumerable<Core.Score> UnlockerScores { get; set; }

    private bool achievementUnlocked => UnlockerScores.Any();
    private string achievementUnlockedText => achievementUnlocked ? "Achievement unlocked!" : "Pending challenge";

}
